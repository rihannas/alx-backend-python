#!/bin/bash

# kurbeScript - A script to set up and verify a local Kubernetes cluster using Minikube

# Exit immediately if a command exits with a non-zero status
set -e

echo "ğŸ” Checking if Minikube is installed..."
if ! command -v minikube &> /dev/null; then
    echo "âŒ Minikube not found. Please install Minikube and try again."
    exit 1
fi

echo "âœ… Minikube is installed."

echo "ğŸš€ Starting Minikube cluster..."
minikube start

echo "ï¿½ï¿½ Verifying Kubernetes cluster status..."
kubectl cluster-info

