#!/bin/bash

# kurbeScript - A script to set up and verify a local Kubernetes cluster using Minikube

# Exit immediately if a command exits with a non-zero status
set -e

echo "🔍 Checking if Minikube is installed..."
if ! command -v minikube &> /dev/null; then
    echo "❌ Minikube not found. Please install Minikube and try again."
    exit 1
fi

echo "✅ Minikube is installed."

echo "🚀 Starting Minikube cluster..."
minikube start

echo "�� Verifying Kubernetes cluster status..."
kubectl cluster-info

echo "📦 Retrieving available pods in the default namespace..."
kubectl get pods

echo "✅ Kubernetes cluster is up and running!"